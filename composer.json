{
    "name": "zeryther/qpost",
    "description": "A social microblogging website written in PHP and JavaScript.",
    "homepage": "https://qpost.gigadrivegroup.com",
    "type": "project",
    "license": "GPL-3.0-or-later",
    "readme": "./README.md",
    "authors": [
        {
            "name": "Mehdi Baaboura",
            "email": "mbaaboura@gigadrivegroup.com",
            "homepage": "https://twitter.com/TheZeryther",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "support@gigadrivegroup.com",
        "issues": "https://gitlab.com/Zeryther/qpost/issues",
        "source": "https://gitlab.com/Zeryther/qpost"
    },
    "require": {
        "php": ">=5.6",
        "cakephp/cakephp": "3.7.*",
        "cakephp/migrations": "^2.0.0",
        "cakephp/plugin-installer": "^1.0",
        "mobiledetect/mobiledetectlib": "2.*"
    },
    "require-dev": {
        "cakephp/bake": "^1.9.0",
        "cakephp/cakephp-codesniffer": "^3.0",
        "cakephp/debug_kit": "^3.17.0",
        "josegonzalez/dotenv": "3.*",
        "phpunit/phpunit": "^5|^6",
        "psy/psysh": "@stable"
    },
    "suggest": {
        "markstory/asset_compress": "An asset compression plugin which provides file concatenation and a flexible filter system for preprocessing and minification.",
        "dereuromark/cakephp-ide-helper": "After baking your code, this keeps your annotations in sync with the code evolving from there on for maximum IDE and PHPStan compatibility."
    },
    "autoload": {
        "psr-4": {
            "qpost\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "qpost\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    },
    "scripts": {
        "post-install-cmd": "qpost\\Console\\Installer::postInstall",
        "post-create-project-cmd": "qpost\\Console\\Installer::postInstall",
        "post-autoload-dump": "Cake\\Composer\\Installer\\PluginInstaller::postAutoloadDump",
        "check": [
            "@test",
            "@cs-check"
        ],
        "cs-check": "phpcs --colors -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/ tests/",
        "cs-fix": "phpcbf --colors --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/ tests/",
        "test": "phpunit --colors=always"
    },
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
