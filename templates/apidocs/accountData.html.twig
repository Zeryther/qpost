{% extends "base.html.twig" %}

{% block content %}
	<small>
		&laquo; <a href="{{ path("qpost_apidocs_index") }}">Go back to the home page</a>
	</small>

	<h1>Account data</h1>

	<p>
		This endpoint may be used to get more sensitive data of the current user, displayed on the Account page.
	</p>

	<hr/>

	<h2><span class="badge badge-success">GET</span> /accountData</h2>

	<p>
		Get more sensitive information about the current user.<br/>
		<span class="text-danger font-weight-bold">Requires authorization</span>
	</p>

	<h3>Response</h3>

	<table class="table table-bordered">
		<thead>
		<tr>
			<th>Property</th>
			<th>Type</th>
			<th>Description</th>
		</tr>
		</thead>
		<tbody>
		<tr>
			<td>email</td>
			<td>string</td>
			<td>The email address of the current user</td>
		</tr>
		<tr>
			<td>gigadriveData</td>
			<td>object</td>
			<td>The Gigadrive account linked to the current user</td>
		</tr>
		</tbody>
	</table>
{% endblock %}