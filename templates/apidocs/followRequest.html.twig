{% extends "base.html.twig" %}

{% block content %}
	<small>
		&laquo; <a href="{{ path("qpost_apidocs_index") }}">Go back to the home page</a>
	</small>

	<h1>FollowRequest</h1>

	<p>
		This endpoint may be used to get information of requests for follow relationships and modify them.
	</p>

	<h2 id="object">The FollowRequest object</h2>

	<table class="table table-bordered">
		<thead>
		<tr>
			<th>Property</th>
			<th>Type</th>
			<th>Description</th>
		</tr>
		</thead>
		<tbody>
		<tr>
			<td>id</td>
			<td>integer</td>
			<td>The unique identifier of this Block</td>
		</tr>
		<tr>
			<td>sender</td>
			<td><a href="{{ path("qpost_apidocs_user") }}#object">User</a></td>
			<td>The creator of this FollowRequest</td>
		</tr>
		<tr>
			<td>receiver</td>
			<td><a href="{{ path("qpost_apidocs_user") }}#object">User</a></td>
			<td>The user that received the request</td>
		</tr>
		<tr>
			<td>time</td>
			<td>string</td>
			<td>The timestamp of when this FollowRequest was created</td>
		</tr>
		</tbody>
	</table>

	<hr/>

	<h2><span class="badge badge-danger">DELETE</span> /followRequest</h2>

	<p>
		Deletes a follow request and accepts or declines it.<br/>
		<span class="text-danger font-weight-bold">Requires authorization</span>
	</p>

	<h3>Parameters</h3>

	<table class="table table-bordered">
		<thead>
		<tr>
			<th>Property</th>
			<th>Type</th>
			<th>Description</th>
		</tr>
		</thead>
		<tbody>
		<tr>
			<td>id</td>
			<td>integer</td>
			<td>The ID of the target FollowRequest</td>
		</tr>
		<tr>
			<td>action</td>
			<td>string</td>
			<td>The action to take on the FollowRequest, either <code>accept</code> or <code>decline</code></td>
		</tr>
		</tbody>
	</table>

	<hr/>

	<h2><span class="badge badge-success">GET</span> /followRequest</h2>

	<p>
		Gets all open follow requests for a specific user.<br/>
		<span class="text-danger font-weight-bold">Requires authorization</span>
	</p>

	<h3>Parameters</h3>

	<table class="table table-bordered">
		<thead>
		<tr>
			<th>Property</th>
			<th>Type</th>
			<th>Description</th>
		</tr>
		</thead>
		<tbody>
		<tr>
			<td>max</td>
			<td>integer</td>
			<td>The maximum ID for follow requests to look for</td>
		</tr>
		</tbody>
	</table>

	<h3>Response</h3>

	<p>Returns multiple <a href="{{ path("qpost_apidocs_followrequest") }}#object">FollowRequest</a> objects.</p>
{% endblock %}