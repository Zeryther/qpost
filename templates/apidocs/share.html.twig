{% extends "base.html.twig" %}

{% block content %}
	<small>
		&laquo; <a href="{{ path("qpost_apidocs_index") }}">{{ __("apidocs.backToHome") }}</a>
	</small>

	<h1>Share</h1>

	<p>
		This endpoint may be used to get information of shares and modify them.
	</p>

	<hr/>

	<h2><span class="badge badge-info">POST</span> /share</h2>

	<p>
		Creates a new share from the current user to a specific FeedEntry.<br/>
		<span class="text-danger font-weight-bold">Requires authorization</span>
	</p>

	<h3>Parameters</h3>

	<table class="table table-bordered">
		<thead>
		<tr>
			<th>Property</th>
			<th>Type</th>
			<th>Description</th>
		</tr>
		</thead>
		<tbody>
		<tr>
			<td>post</td>
			<td>integer</td>
			<td>The ID of the target FeedEntry</td>
		</tr>
		</tbody>
	</table>

	<h3>Response</h3>

	<p>Returns a single <a href="{{ path("qpost_apidocs_feed") }}#object">FeedEntry</a> object.</p>

	<hr/>

	<h2><span class="badge badge-danger">DELETE</span> /share</h2>

	<p>
		Deletes a share from the current user to a specific FeedEntry.<br/>
		<span class="text-danger font-weight-bold">Requires authorization</span>
	</p>

	<h3>Parameters</h3>

	<table class="table table-bordered">
		<thead>
		<tr>
			<th>Property</th>
			<th>Type</th>
			<th>Description</th>
		</tr>
		</thead>
		<tbody>
		<tr>
			<td>post</td>
			<td>integer</td>
			<td>The ID of the target FeedEntry (parent)</td>
		</tr>
		</tbody>
	</table>
{% endblock %}