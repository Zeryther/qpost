{% extends "homeBase.html.twig" %}

{% block content %}
	<div class="row">
		<div class="col-lg-6 offset-lg-3">
			{% include "parts/flash.html.twig" %}
			<div class="card">
				<div class="card-body">
					<h3 class="text-center mb-2 text-white">Log in</h3>

					<form action="{{ path("qpost_login_index") }}" method="post">
						{% include "parts/csrf.html.twig" %}
						<input type="text" class="form-control mb-2" name="email"
							   placeholder="Email address or username"
							   value="{{ _POST['email'] is defined ? _POST['email'] }}"/>
						<input type="password" class="form-control mb-2" name="password" placeholder="Password"/>
						<input type="submit" class="btn btn-block btn-primary bootstrapButton" value="Log in"/>

						<a href="{{ path("qpost_resetpassword_index") }}"
						   class="btn btn-block btn-light bootstrapButton">Forgot your
							password?</a>

						<hr/>

						<a href="{{ path("qpost_home_index") }}" class="btn btn-block btn-light mb-2 bootstrapButton">Create
							an
							account</a>
						<a href="{{ path("qpost_login_gigadrive") }}" class="btn btn-block btn-success" data-no-instant>Sign
							in with
							Gigadrive</a>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}