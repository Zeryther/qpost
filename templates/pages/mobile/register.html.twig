{% extends "pages/mobile/base.html.twig" %}

{% block content %}
	<img src="/assets/img/qpost-white-small.png" height="60" alt="qpost" title="qpost Logo" class="logo"/>

	<form class="mt-3" method="post" action="{{ path("qpost_home_index") }}">
		{% include "@GigadriveSymfonyExtensions/csrf.html.twig" %}
		{% include "parts/flash.html.twig" %}

		<input type="email" class="form-control mb-2" name="email" placeholder="Email"/>
		<input type="text" class="form-control mb-2" name="displayName" placeholder="Full Name"/>
		<input type="text" class="form-control mb-2" name="username" placeholder="Username"/>
		<input type="password" class="form-control mb-2" name="password" placeholder="Password"/>

		<hr/>

		<input type="submit" class="btn btn-primary btn-block" value="Create Account"/>

		<div class="font-weight-bold small text-center mb-1 mt-1">OR</div>

		<a href="{{ path("qpost_login_gigadrive") }}" class="btn btn-success btn-block">Sign in with
			Gigadrive</a>

		<a href="{{ path("qpost_login_index") }}" class="btn btn-light btn-block">Log in</a>

		<p class="text-dark small mt-3 mb-0">
			By clicking Create account or Sign in with Gigadrive, you accept our <a
					href="{{ path("qpost_redirect_terms") }}" target="_blank">terms of service</a>.
		</p>
	</form>
{% endblock %}