{% extends "settings/base.html.twig" %}
{% import "settings/macro.html.twig" as macro %}

{% block content %}
	{{ macro.settingsHeadline(__("settings.account.password.headline")) }}

	{% include "parts/flash.html.twig" %}

	<form action="{{ currentPath() }}" method="post">
		{% include "@GigadriveSymfonyExtensions/csrf.html.twig" %}

		<div class="form-group">
			<input type="password" class="form-control" id="oldPassword" name="oldPassword"
				   placeholder="{{ __("settings.account.password.currentPlaceholder") }}"/>
		</div>

		<div class="form-group">
			<input type="password" class="form-control" id="newPassword" name="newPassword"
				   placeholder="{{ __("settings.account.password.newPlaceholder") }}"/>
		</div>

		<div class="form-group">
			<input type="password" class="form-control" id="newPassword2" name="newPassword2"
				   placeholder="{{ __("settings.account.password.repeatPlaceholder") }}"/>
		</div>

		<button type="submit" class="btn btn-primary btn-block bootstrapButton">
			{{ __("button.saveChanges") }}
		</button>
	</form>
{% endblock %}